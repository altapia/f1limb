---
import { ApuestaService } from "@/lib/apuestaService"
import type { ParticipanteVO } from "@/lib/model"

const { idGP, idTemporada } = Astro.props
const apuestasService = new ApuestaService()
const listParticipantes = await apuestasService.participantesHanApostadoTodo(idTemporada, idGP)
---

<h4>Estado apostado usuarios:</h4>
<ul class="flex flex-row flex-wrap gap-2">
	{
		listParticipantes.map((p: ParticipanteVO) => (
			<li class="rounded bg-slate-400 p-1 text-sm" class:list={[{ "!bg-green-300": p.apostado }]}>
				{p.user?.nombre}
			</li>
		))
	}
</ul>
