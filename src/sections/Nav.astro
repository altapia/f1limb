          <span class="self-center text-2xl font-semibold whitespace-nowrap">F1 Limb</span>
      </a>
      <!-- {info && <span>{info.nombre}</span> } -->
      <div class=" block w-auto" id="navbar-default">
        <ul class="font-medium flex p-0 flex-row ">
            <li>
                <a href="/clasificacion" class="py-2 px-3 rounded p-0 flex" 
                class:list={[
                    {' text-black bg-teal-500 hover:bg-teal-800 hover:text-white' : currentPath==='clasificacion'},
                    {' text-white bg-teal-800 hover:bg-teal-500' : currentPath!=='clasificacion'},
