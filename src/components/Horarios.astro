---
import Clock from '@/icons/Clock.astro'

const { info } = Astro.props;

const dateOptions: Intl.DateTimeFormatOptions = {
    weekday: "short",
    hour: "2-digit", 
    minute: "2-digit"
}
---

<details class="w-72 [&_svg]:open:-rotate-180">
    <summary class="flex flex-row gap-4 items-center cursor-pointer text-center text-md font-semibold bg-slate-200 rounded-sm p-3">
        <svg class="rotate-0 transform text-slate-700 transition-all duration-300" fill="none" height="20" width="20" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24">
            <polyline points="6 9 12 15 18 9"></polyline>
        </svg>
        <div class="flex flex-row items-center ">
            Horarios 
            <Clock class="h-5 w-5 text-black ml-1"/>
        </div>
    </summary>
    <div class="px-4 shadow-xl capitalize">
        <div class="flex flex-col">
            <span>Libres 1: {new Date(info.libres1).toLocaleTimeString("es-ES", dateOptions)}</span>
            <span>Libres 2: {new Date(info.libres2).toLocaleTimeString("es-ES", dateOptions)}</span>
            <span>Libres 2: {new Date(info.libres3).toLocaleTimeString("es-ES", dateOptions)}</span>
        </div>
        <hr class="my-2">
        <div class="flex flex-col">
            <span class="font-semibold">Clasificaci√≥n: {new Date(info.clasificacion).toLocaleTimeString("es-ES", dateOptions)}</span>
            <span class="font-semibold">Carrera: 
                <span class="">{new Date(info.carrera).toLocaleTimeString("es-ES", dateOptions)}</span>
            </span>
        </div>
        <p class="text-xs text-right normal-case">* agro time</p>
    </div>
</details>