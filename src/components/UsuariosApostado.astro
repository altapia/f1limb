---
import { ApuestaService } from "@/lib/apuestaService"
import type { UserVO } from "@/lib/model"
import { UserService } from "@/lib/userService"

const { idGP } = Astro.props
const userService = new UserService()
const apuestasService = new ApuestaService()

const listUsuarios = await apuestasService.usuariosHanApostadoTodo(idGP)
---

<h4>Estado apostado usuarios:</h4>
<ul class="flex flex-row gap-2">
	{
		listUsuarios.map((u: UserVO) => (
			<li class="rounded bg-slate-400 p-1 text-sm" class:list={[{ "!bg-green-300": u.apostado }]}>
				{u.nombre}
			</li>
		))
	}
</ul>
