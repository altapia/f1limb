---
const { info } = Astro.props;

const dateOptionsDia: Intl.DateTimeFormatOptions = {
  day: "2-digit",
  month: "short",
  timeZone: "CET",
};

const dateOptions: Intl.DateTimeFormatOptions = {
  weekday: "long",
  hour: "2-digit",
  minute: "2-digit",
  timeZone: "CET",
};
---

<a href={"/gp" + info.id} title={"Info " + info.nombre}>
  <article
    class="flex flex-col justify-center p-5 border-teal-600 border-2 min-w-72 shadow-xl"
  >
    <h5 class="flex flex-col text-xl font-semibold text-center mb-5">
      <div class="flex justify-center items-center">
        <img class="h-8 mr-2" src={"/img/" + info.flag} />
        <div class="flex flex-col">
          {info.nombre}
          <small class="text-xs font-semibold text-center">
            {new Date(info.libres1).toLocaleDateString("es-ES", dateOptionsDia)}
            -
            {new Date(info.carrera).toLocaleDateString("es-ES", dateOptionsDia)}
          </small>
        </div>
      </div>
    </h5>
    <div class="flex flex-col">
      <span
        >Libres 1: {
          new Date(info.libres1).toLocaleTimeString("es-ES", dateOptions)
        }</span
      >
      <span
        >Libres 2: {
          new Date(info.libres2).toLocaleTimeString("es-ES", dateOptions)
        }</span
      >
      <span
        >Libres 2: {
          new Date(info.libres3).toLocaleTimeString("es-ES", dateOptions)
        }</span
      >
    </div>
    <hr class="my-2" />
    <div class="flex flex-col">
      <span class="font-semibold"
        >Clasificaci√≥n: {
          new Date(info.clasificacion).toLocaleTimeString("es-ES", dateOptions)
        }</span
      >
      <span class="font-semibold"
        >Carrera:
        <span class=""
          >{
            new Date(info.carrera).toLocaleTimeString("es-ES", dateOptions)
          }</span
        >
      </span>
    </div>
  </article>
</a>
