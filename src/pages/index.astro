---
import Layout from '@/layouts/Layout.astro'
import Hero from '@/sections/Hero.astro'
import Info from '@/components/Info.astro'

const infos = await Astro.glob('@/content/*/info.json');
---

<Layout title="F1 Limb">
	<div class="mx-auto max-w-6xl px-2 pt-16 md:pt-20 lg:px-10">
		<Hero/>
	</div>
	<main class="mx-auto max-w-6xl px-2 pt-16 md:pt-20 lg:px-10">
		<section class="flex flex-row justify-center gap-2">
			<a href="/clasificacion" class="p-2 bg-orange-500 text-white">Clasificaciones</a>
		</section>

		<section class="flex flex-col md:flex-row justify-center gap-2 my-10">
		{
			infos.map((data, i) => <Info info={data} index={i}/>)
		}
		</section>
	</main>
</Layout>
