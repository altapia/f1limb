---
export const prerender = false //Se renderiza en el servidor

import Back from "@/icons/Back.astro"
import Layout from "@/layouts/Layout.astro"
import { TemporadaService } from "@/lib/temporadaService"
import Nav from "@/sections/Nav.astro"

const temporadaService = new TemporadaService()
const temporada = await temporadaService.getCurrentTemporada()
---

<Layout title="F1 Limb">
	<Nav idTemporada={temporada.id} nombreTemporada={temporada.nombre} />
	<main class="flex flex-col items-center justify-center bg-white text-teal-500">
		<div class="mt-20 flex flex-col text-center">
			<h1 class="mb-4 text-6xl font-bold">404</h1>
			<div class="mb-8">
				<p class="text-2xl">Recurso no encontrado</p>
			</div>
			<a
				href="/"
				class="flex justify-center bg-teal-800 p-3 text-center text-white hover:bg-teal-500 hover:text-black"
			>
				<i><Back class="mr-1 h-5 w-5 text-white" /></i>
				Volver a la pista
			</a>
		</div>
	</main>
</Layout>
